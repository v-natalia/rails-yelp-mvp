<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= simple_form_for [restaurant, review] do |f| %>
        <%= f.input :content, placeholder: 'Please, enter your comment' %>
        <%= f.input :rating, placeholder: 'Enter a rating' %>
        <%= f.submit class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
